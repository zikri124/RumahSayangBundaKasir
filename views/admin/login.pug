html
  head
    meta(charset="UTF-8")
    title Rumah Sayang Bunda - Login Admin
    link(href="https://i.ibb.co/FbgNc2d/icon-RSB.jpg" rel="shortcut icon" type="image/png")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="/css/App.css" rel="stylesheet")
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Nunito:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Poppins&display=swap' rel='stylesheet')
  body  
    .hero.min-h-screen.bg-gradient-to-r.from-purple-500.font-pp(class="to-pink-500")
      .hero-content.flex-col
        .text-center.text-white
          h1.text-5xl.font-bold.font-ds Login Admin Kasir
          p.py-6
            | Rumah Sayang Bunda
        .card.w-80.shadow-2xl.bg-white(class="lg:w-96")
          .card-body
            form(action="/auth/signin" id="basic-form" name="formValidation" method='post')
              p
                .form-control              
                  label.label
                    span.label-text(class="after:content-['*'] after:ml-0.5 after:text-red-500") Email
                  input.input.input-bordered.bg-white(type='email' placeholder='email' name='email' required='')
              p
                .form-control
                  label.label
                    span.label-text(class="after:content-['*'] after:ml-0.5 after:text-red-500") Password
                  input.input.input-bordered.bg-white(type='password' placeholder='password' name='password' minlength="5" required='')
              .form-control.mt-6
                button.btn.border-none(class="bg-pink-500 text-white hover:bg-pink-800" type='submit') Login
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js")
    script(src="/js/login.js")